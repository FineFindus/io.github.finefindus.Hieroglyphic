{
    "id": "io.github.finefindus.Hieroglyphic",
    "runtime": "org.gnome.Platform",
    "runtime-version": "45",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "hieroglyphic",
    "finish-args": [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--env=G_MESSAGES_DEBUG=none",
        "--env=RUST_BACKTRACE=1"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin"
    },
    "modules": [
        {
            "name": "hieroglyphic",
            "buildsystem": "meson",
            "run-tests": false,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/FineFindus/Hieroglyphic/releases/download/v1.0.0/hieroglyphic-1.0.0.tar.xz",
                    "sha256": "c29da287d009ea6e9e0b7c29318a03dff18ec4a393920b7b27e57cfeb77c7172"
                }
            ]
        }
    ]
